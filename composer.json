{
  "name": "jontsa/maintenance-bundle",
  "description": "Symfony bundle to put your site in to maintenance mode.",
  "license": "MIT",
  "type": "symfony-bundle",

  "require": {
    "php": "^7.1",
    "symfony/http-kernel": "^4.0|^5.0",
    "symfony/console": "^4.0|^5.0",
    "symfony/config": "^4.0|^5.0",
    "symfony/dependency-injection": "^4.0|^5.0"
  },
  "require-dev": {
    "symfony/phpunit-bridge": "^4.0|^5.0"
  },

  "autoload": {
    "psr-4": {
      "Jontsa\\Bundle\\MaintenanceBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jontsa\\Bundle\\MaintenanceBundle\\Tests\\": "Tests/"
    }
  }
}
